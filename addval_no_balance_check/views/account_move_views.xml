<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="view_move_line_form" inherit_id="view_move_line_form">
        <xpath expr="//field[@name='credit']" position="replace">
          <field name="credit"/>
        </xpath>
        <xpath expr="//field[@name='debit']" position="replace">
          <field name="debit"/>
        </xpath>
        <xpath expr="//field[@name='quantity']" position="replace">
          <field name="quantity"/>
        </xpath>
    </template>
</odoo>