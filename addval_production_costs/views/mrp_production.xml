<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="mrp_production_costs" model="ir.ui.view">
        <field name="name">mrp.production.costs</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="model">mrp.production</field>
        <field name="arch" type="xml">
            <header position="inside">
                <button string="Generar Cobre"
                    type="object"
                    name="create_cu_conc"
                    class="oe_highlight"
                    attrs="{'invisible': ['|', '|', ('product_id', '!=', 899), ('state', '!=', 'done'), ('mrp_cu_id', '!=', False)]}"/>
                <button string="Generar Fierro"
                    type="object"
                    name="create_fe_conc"
                    class="oe_highlight"
                    attrs="{'invisible': ['|', '|', ('product_id', '!=', 899), ('state', '!=', 'done'), ('mrp_fe_id', '!=', False)]}"/>
                <button string="Relave"
                    type="object"
                    name="create_relave"
                    class="oe_highlight"
                    attrs="{'invisible': ['|', '|', ('product_id', '!=', 899), ('state', '!=', 'done'), ('mrp_relave_id', '!=', False)]}"/>
            </header>
            <field name="company_id" position="after">
                <field name="mrp_cu_id"/>
                <field name="mrp_fe_id"/>
                <field name="mrp_relave_id"/>
            </field>
            <xpath expr="//notebook[1]" position="inside">
                <page name="production_calculator" string="Calculadora Producción" attrs="{'invisible': [('product_id', 'not in', (906, 907, 908))]}">
                    <group>
                        <group>
                            <field name="fe_grade_id" string="Ley Fierro" attrs="{'invisible': [('product_id', '!=', 907)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="plant_recovery_id" string="Recuperación Metalúrgica de la Planta" attrs="{'invisible': [('product_id', 'not in', (906, 907, 908))], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="fe_conc_grade_id" string="Ley de concentrado de Fierro" attrs="{'invisible': [('product_id', '!=', 907)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="au_conc_grade_id" string="Au Conc. Calificación" attrs="{'invisible': [('product_id', 'not in', (906, 907, 908))], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="cu_price_id" string="Precio Cu" attrs="{'invisible': [('product_id', '!=', 906)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="gold_price_id" string="Precio de oro" attrs="{'invisible': [('product_id', 'not in', (906, 907, 908))], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="fe_conc_price_id" string="Precio del concentrado de Fe" attrs="{'invisible': [('product_id', '!=', 907)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="tonnes_processed" string="Toneladas de Minerales Procesado" attrs="{'invisible': [('product_id', 'not in', (906, 907, 908))], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="cu_grade" string="Ley Cobre" attrs="{'invisible': [('product_id', '!=', 906)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="cu_conc_grade" string="Ley de concentrado de cobre" attrs="{'invisible': [('product_id', '!=', 906)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="average_mining_humidity" string="Descuento humedad promedio mineral" attrs="{'invisible': [('product_id', 'not in', (906, 907, 908))], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="drum_efficiency_1" string="Eficiencia tambor 1" attrs="{'invisible': [('product_id', '!=', 907)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="drum_efficiency_2" string="Eficiencia tambor 2" attrs="{'invisible': [('product_id', '!=', 907)], 'readonly': [('state', '!=', 'draft')]}"/>
                            <field name="drum_efficiency_3" string="Eficiencia tambor 3" attrs="{'invisible': [('product_id', '!=', 907)], 'readonly': [('state', '!=', 'draft')]}"/>
                        </group>
                        <group>
                            <button string="Calcular Cu"
                                type="object"
                                name="calculate_cu_conc"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('product_id', '!=', 906)]}"/>
                            <button string="Calcular Fe"
                                type="object"
                                name="calculate_fe_conc"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('product_id', '!=', 907)]}"/>
                            <button string="Calcular relave"
                                type="object"
                                name="calculate_relave"
                                class="oe_highlight"
                                attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('product_id', '!=', 908)]}"/>
                        </group>
                    </group>
                    <!--mineral semi procesado 899 -->
                    <!--Concentrado de Cobre 906 -->
                    <!--Concentrado de Fierro 907 -->
                    <!--Relave de Flotación 908 -->
                </page>
            </xpath>
        </field>
      </record>
    </data>
</odoo>